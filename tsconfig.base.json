{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chapterhouse/ui/*": [
        "packages/ui/src/*"
      ],
      "@chapterhouse/core/*": [
        "packages/core/src/*"
      ]
    }
  }
}